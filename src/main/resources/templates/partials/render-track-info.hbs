<div class="uk-margin-small-left uk-margin-small-bottom">
    <a style="{{#if this.[2]}}color:red;{{/if}}" class="uk-inline uk-margin-small-right"
       href="/favorites/{{#if this.[2]}}remove{{else}}add{{/if}}/{{this.0.id}}?redirect={{currentPage}}" uk-icon="icon: heart; ratio: 1.3"></a>
    <img class="smallPreviewImg uk-inline" src="{{this.0.album.images.0.url}}">
    <div class="uk-inline uk-margin-small-left" style="color:black;">
        <p class="songTitle" style="font-weight: 500; font-size: 20px; margin-bottom: -5px;">{{this.0.name}}</p>
        <span>{{this.[1]}}</span>
    </div>
</div>
