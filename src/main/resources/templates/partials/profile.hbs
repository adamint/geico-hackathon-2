<div class="uk-text-center" style="align-items: center; margin-top: 16px; margin-bottom: 16px;">
    <img class="profileImg" src="{{user.profileImage}}">
</div>

<div id="">
    <h3 class="uk-text-center">Recently Played</h3>
    {{#each recentlyPlayed}}
        <div class="uk-margin-small-left uk-margin-small-bottom">
            <a style="{{#if this.[2]}}color:red;{{/if}}" class="uk-inline uk-margin-small-right" href="{{#unless this.[2]}}/favorites/add/{{this.0.id}}{{/unless}}" uk-icon="icon: heart; ratio: 1.3"></a>
            <img class="smallPreviewImg uk-inline" src="{{this.0.album.images.0.url}}">
            <div class="uk-inline uk-margin-small-left" style="color:black;">
                <p style="font-weight: 500; font-size: 20px; margin-bottom: -5px;">{{this.0.name}}</p>
                <span>{{this.[1]}}</span>
            </div>
        </div>
    {{/each}}
</div>